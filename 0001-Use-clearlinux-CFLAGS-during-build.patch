From: Francisco Boni <boboniboni@gmail.com>
Date: Mon, 3 May 2021 03:58:38 -0300
Subject: [PATCH 1/3] Use clearlinux CFLAGS during build.

---
 Configurations/10-main.conf | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/Configurations/10-main.conf b/Configurations/10-main.conf
index b141be5..f822222 100644
--- a/Configurations/10-main.conf
+++ b/Configurations/10-main.conf
@@ -633,6 +633,7 @@ sub vms_info {
     },
     "linux-generic64" => {
         inherit_from     => [ "linux-generic32" ],
+        CFLAGS           => add($ENV{'CFLAGS'}),
         bn_ops           => "SIXTY_FOUR_BIT_LONG RC4_CHAR",
     },

@@ -732,6 +733,7 @@ sub vms_info {
     #### machines where gcc doesn't understand -m32 and -m64
     "linux-elf" => {
         inherit_from     => [ "linux-generic32", asm("x86_elf_asm") ],
+        CFLAGS           => add($ENV{'CFLAGS'}),
         cflags           => add(picker(default => "-DL_ENDIAN",
                                        release => "-fomit-frame-pointer")),
         bn_ops           => "BN_LLONG",
